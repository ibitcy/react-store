{
  "name": "react-stores",
  "version": "5.1.2",
  "sideEffects": false,
  "keywords": [
    "react",
    "stores",
    "reactive",
    "flux",
    "states",
    "redux",
    "state",
    "components"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "description": "React stores",
  "main": "lib/index.js",
  "module": "index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib && rollup --config ./rollup.config.js && yarn check-size",
    "build:dev": "NODE_ENV=development rollup --config ./rollup.config.js",
    "check-size": "size-limit",
    "pretest": "yarn build && yarn build:dev",
    "test": "yarn jest",
    "test:watch": "npx jest --watch",
    "demo": "webpack-dev-server --progress --config ./demo/webpack.config.js --inline",
    "release:demo": "webpack --config ./demo/webpack.prod.config.js",
    "prepare": "yarn build && yarn build:dev && yarn test"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "4kb",
      "webpack": false
    }
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "tests/.*.test[.](tsx?)",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "author": "IBIT LTD.",
  "license": "MIT",
  "dependencies": {
    "clone-deep": "^4.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.4.2",
    "@size-limit/preset-small-lib": "^2.2.2",
    "@testing-library/react": "^9.3.3",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.3",
    "acorn": "^7.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "expect": "^24.9.0",
    "expect-jsx": "^5.0.0",
    "html-loader": "^0.5.5",
    "jest": "^24.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "react-tools": "^0.13.3",
    "rollup": "^1.27.11",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript2": "^0.25.3",
    "should": "^13.2.3",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "repository": "https://github.com/ibitcy/react-stores.git",
  "peerDependencies": {
    "react": "^16.8.6"
  }
}
